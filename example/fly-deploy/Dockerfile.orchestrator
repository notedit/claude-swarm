# Multi-stage build for the Orchestrator image
# This image runs as a persistent HTTP server that manages agent sessions.

# ── Build stage ──────────────────────────────────────────────────────────────
FROM node:20-alpine AS builder

WORKDIR /app

COPY package.json package-lock.json* ./
RUN npm install

COPY tsconfig.json ./
COPY src/ ./src/

RUN npm run build

# ── Production stage ─────────────────────────────────────────────────────────
FROM node:20-alpine

WORKDIR /app

COPY package.json package-lock.json* ./
RUN npm install --omit=dev

COPY --from=builder /app/dist ./dist

EXPOSE 8080

# Run the HTTP API server (not the CLI entry point)
CMD ["node", "dist/orchestrator/server.js"]
